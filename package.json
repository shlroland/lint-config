{
  "name": "@shlroland/lint-config",
  "private": true,
  "version": "0.0.1",
  "description": "前端lint工具大集合",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run build --stream --parallel --filter {packages}",
    "dev": "pnpm run dev --stream --parallel --filter {packages}",
    "fix:lint": "eslint packages --ext .ts  --fix",
    "fix:prettier": "prettier \"packages/**/*.ts\" --write",
    "lint-staged": "lint-staged",
    "cm": "cz",
    "prepare": "husky install"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@shlroland/commitizen-config": "workspace:^0.0.1",
    "@shlroland/commitlint-config": "workspace:^0.0.2",
    "@shlroland/eslint-config-prettier": "workspace:^0.0.2",
    "@shlroland/eslint-config-ts": "workspace:^0.0.3",
    "@shlroland/lint-staged": "workspace:^0.0.2",
    "@shlroland/prettier-config": "workspace:^0.0.2",
    "@shlroland/stylelint-config": "workspace:^0.0.2",
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.21",
    "commitizen": "^4.2.4",
    "cz-git": "^1.2.0",
    "eslint": "^8.10.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3"
  }
}

    "@shlroland/eslint-config-ts": "workspace:^0.0.1",
    "@shlroland/lint-staged": "workspace:^0.0.1",
    "@shlroland/stylelint-config": "workspace:^0.0.1",
    "@types/node": "^17.0.21",
    "eslint": "^8.10.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3"
